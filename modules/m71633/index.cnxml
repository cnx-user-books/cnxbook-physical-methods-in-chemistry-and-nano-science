                <m:mtext>mol</m:mtext>
                <m:mtext>∙</m:mtext>
                <m:mfrac>
                  <m:mtext>114.23 g octane</m:mtext>
                  <m:mtext>mol</m:mtext>
                </m:mfrac>
                <m:mtext>=114.23 g octane</m:mtext>
              </m:mrow>
