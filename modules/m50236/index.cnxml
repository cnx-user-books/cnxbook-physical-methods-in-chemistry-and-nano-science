                          <m:mi>t</m:mi>
                          <m:mo stretchy="false">)</m:mo>
                          <m:msup>
                            <m:mi>E</m:mi>
                            <m:mrow>
                              <m:mrow/>
                            </m:mrow>
                          </m:msup>
                          <m:mo stretchy="false">(</m:mo>
                          <m:mrow>
                            <m:mi>t</m:mi>
                            <m:mo stretchy="false">+</m:mo>
                            <m:mi>τ</m:mi>
                          </m:mrow>
                          <m:mo stretchy="false">)</m:mo>
                        </m:mrow>
                        <m:mo stretchy="false">〉</m:mo>
                      </m:mrow>
                      <m:mrow>
                        <m:mo stretchy="false">〈</m:mo>
                        <m:mrow>
