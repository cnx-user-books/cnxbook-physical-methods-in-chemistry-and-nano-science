            <m:mrow>
              <m:mo fence="true" stretchy="true">[</m:mo>
              <m:mrow>
                <m:mrow>
                  <m:mrow>
                    <m:mi>n</m:mi>
                    <m:mo stretchy="false">+</m:mo>
                    <m:mrow>
                      <m:mo fence="true" stretchy="false">(</m:mo>
                      <m:mrow>
                        <m:mrow>
                          <m:mi>N</m:mi>
                          <m:mo stretchy="false">−</m:mo>
                          <m:mi>n</m:mi>
                        </m:mrow>
                      </m:mrow>
                      <m:mo fence="true" stretchy="false">)</m:mo>
                    </m:mrow>
                  </m:mrow>
                  <m:mfrac>
                    <m:mrow>
                      <m:mi>log</m:mi>
                      <m:mrow>
                        <m:mrow>
                          <m:mo fence="true" stretchy="true">(</m:mo>
                          <m:mrow>
                            <m:msubsup>
                              <m:mi>t</m:mi>
                              <m:mrow>
                                <m:mi>r</m:mi>
                                <m:mrow>
                                  <m:mo fence="true" stretchy="false">(</m:mo>
                                  <m:mrow>
                                    <m:mi mathvariant="italic">unknown</m:mi>
                                  </m:mrow>
                                  <m:mo fence="true" stretchy="false">)</m:mo>
                                </m:mrow>
                              </m:mrow>
                              <m:mi>'</m:mi>
                            </m:msubsup>
                          </m:mrow>
                          <m:mo fence="true" stretchy="true">)</m:mo>
                        </m:mrow>
                        <m:mo stretchy="false">−</m:mo>
                        <m:mi>log</m:mi>
                      </m:mrow>
                      <m:mi>⁡</m:mi>
                      <m:mrow>
                        <m:mo fence="true" stretchy="false">(</m:mo>
                        <m:mrow>
                          <m:msubsup>
                            <m:mi>t</m:mi>
                            <m:mrow>
                              <m:mi>r</m:mi>
                              <m:mrow>
                                <m:mo fence="true" stretchy="false">(</m:mo>
                                <m:mrow>
                                  <m:mi>n</m:mi>
                                </m:mrow>
                                <m:mo fence="true" stretchy="false">)</m:mo>
                              </m:mrow>
                            </m:mrow>
                            <m:mi>'</m:mi>
                          </m:msubsup>
                        </m:mrow>
                        <m:mo fence="true" stretchy="false">)</m:mo>
                      </m:mrow>
                    </m:mrow>
                    <m:mrow>
                      <m:mi>log</m:mi>
                      <m:mrow>
                        <m:mrow>
                          <m:mo fence="true" stretchy="true">(</m:mo>
                          <m:mrow>
                            <m:msubsup>
                              <m:mi>t</m:mi>
                              <m:mrow>
                                <m:mi>r</m:mi>
                                <m:mrow>
                                  <m:mo fence="true" stretchy="false">(</m:mo>
                                  <m:mrow>
                                    <m:msup>
                                      <m:mi>N</m:mi>
                                      <m:mi>'</m:mi>
                                    </m:msup>
                                  </m:mrow>
                                  <m:mo fence="true" stretchy="false">)</m:mo>
                                </m:mrow>
                              </m:mrow>
                              <m:mi>'</m:mi>
                            </m:msubsup>
                          </m:mrow>
                          <m:mo fence="true" stretchy="true">)</m:mo>
                        </m:mrow>
                        <m:mo stretchy="false">−</m:mo>
                        <m:mi>log</m:mi>
                      </m:mrow>
                      <m:mi>⁡</m:mi>
                      <m:mrow>
                        <m:mo fence="true" stretchy="false">(</m:mo>
                        <m:mrow>
                          <m:msubsup>
                            <m:mi>t</m:mi>
                            <m:mrow>
                              <m:mi>r</m:mi>
                              <m:mrow>
                                <m:mo fence="true" stretchy="false">(</m:mo>
