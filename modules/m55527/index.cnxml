                    <m:mi>ε</m:mi>
                  </m:mrow>
                  <m:mi>'</m:mi>
                  <m:mo stretchy="false">(</m:mo>
                  <m:mi>ω</m:mi>
                  <m:mrow>
                    <m:mo stretchy="false">)</m:mo>
                    <m:mo stretchy="false">−</m:mo>
                    <m:mi fontstyle="italic">iε</m:mi>
                  </m:mrow>
                  <m:mtext>''</m:mtext>
